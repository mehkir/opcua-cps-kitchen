# Doxygen configuration file template

PROJECT_NAME           = "@PROJECT_NAME@"
OUTPUT_DIRECTORY       = "@CMAKE_CURRENT_BINARY_DIR@/docs"
INPUT                  = \
                        "@CMAKE_SOURCE_DIR@/robot" \
                        "@CMAKE_SOURCE_DIR@/controller" \
                        "@CMAKE_SOURCE_DIR@/conveyor" \
                        "@CMAKE_SOURCE_DIR@/kitchen" \
                        "@CMAKE_SOURCE_DIR@/statistics" \
                        "@CMAKE_SOURCE_DIR@/actions" \
                        "@CMAKE_SOURCE_DIR@/capabilities" \
                        "@CMAKE_SOURCE_DIR@/recipe" \
                        "@CMAKE_SOURCE_DIR@/wrappers" \
                        "@CMAKE_SOURCE_DIR@/README.md"
EXCLUDE                = "@CMAKE_SOURCE_DIR@/build" "@CMAKE_SOURCE_DIR@/build_debug" "@CMAKE_SOURCE_DIR@/build_sanitized"
EXCLUDE_PATTERNS       = */CMakeFiles/* */build/* */build_*/*
RECURSIVE              = YES

FILE_PATTERNS          = *.hpp *.h *.cpp *.c
INLINE_SOURCES         = YES
STRIP_FROM_PATH        = "@CMAKE_SOURCE_DIR@"
FULL_PATH_NAMES        = NO

PROJECT_BRIEF          = "OPC UA CPS Kitchen demo"
OUTPUT_LANGUAGE        = English

USE_MDFILE_AS_MAINPAGE = README.md
MARKDOWN_SUPPORT       = YES

SHOW_INCLUDE_FILES     = YES
SOURCE_BROWSER         = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES

GENERATE_TREEVIEW      = YES
GENERATE_HTML          = YES
GENERATE_LATEX         = NO
GENERATE_XML           = NO

QUIET                  = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = YES

# If you have Graphviz
HAVE_DOT               = YES
DOT_IMAGE_FORMAT       = svg
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
DOT_TRANSPARENT        = YES